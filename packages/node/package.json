{
  "name": "@encrejs/api",
  "version": "0.0.0",
  "engines": {
    "node": ">=20"
  },
  "main": "./index.js",
  "types": "./index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/VictorS67/encre.git",
    "directory": "packages/node"
  },
  "author": "Encre",
  "license": "MIT",
  "type": "module",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "release": "yarn lint-fix && release-it --only-version --config .release-it.json",
    "build": "yarn clean && yarn run build:esm && yarn run build:cjs && node scripts/create-entrypoints.js && node scripts/check-tree-shaking.js",
    "build:esm": "tsc --outDir build/ --composite false && rimraf build/tests build/**/tests",
    "build:cjs": "tsc --outDir build-cjs/ --composite false -p tsconfig.cjs.json && node scripts/move-cjs-to-build.js && rimraf build-cjs",
    "lint": "eslint src/*.ts src/**/*.ts && yarn lint:dpdm",
    "lint:dpdm": "dpdm --skip-dynamic-imports circular --no-warning --no-tree -T src/*.ts src/**/*.ts",
    "lint-fix": "eslint --fix src/*.ts src/**/*.ts",
    "clean": "rimraf build/**",
    "test": "jest --testPathIgnorePatterns=\\.int\\.test.ts --testTimeout 30000 --maxWorkers=50% --silent"
  },
  "packageManager": "yarn@1.22.21",
  "devDependencies": {
    "@babel/preset-env": "^7.23.2",
    "@jest/globals": "^29.7.0",
    "@swc/core": "^1.3.93",
    "@swc/jest": "^0.2.29",
    "@types/eslint": "^8.44.2",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.8.6",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "babel-jest": "^29.7.0",
    "dotenv": "^16.4.5",
    "dpdm": "^3.12.0",
    "eslint": "8.48.0",
    "eslint-cjs-to-esm": "^2.2.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "prettier": "^3.0.3",
    "rollup": "^4.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-pattern": "^5.0.6",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@encrejs/core": "^0.0.5",
    "@types/object-hash": "^3.0.5",
    "emittery": "^1.0.3",
    "nanoid": "^5.0.2",
    "p-queue": "^7.4.1",
    "release-it": "^17.3.0"
  },
  "exports": {
    "./api": {
      "types": "./api.d.ts",
      "import": "./api.js",
      "require": "./api.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "build/",
    "api.cjs",
    "api.js",
    "api.d.ts",
    "index.cjs",
    "index.js",
    "index.d.ts"
  ]
}
