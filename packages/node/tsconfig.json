{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "outDir": "./build",
    "rootDir": "./src",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "composite": true,
    "declaration": true,
    "emitDecoratorMetadata": false,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ],
  "ts-node": {
    "swc": true,
    "experimentalResolver": true,
    "experimentalSpecifierResolution": "node",
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "references": [
    {
      "path": "../core"
    }
  ],
  "typedocOptions": {
    "entryPoints": [
      "src/api.ts",
      "src/streaming.ts"
    ]
  }
}
