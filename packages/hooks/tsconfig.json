{
  "compilerOptions": {
    "target": "es2018",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "rootDir": "src",
    "outDir": "lib",
    "composite": true,
    "declaration": true
  },
  "include": ["src"]
}
